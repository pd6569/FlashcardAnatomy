<?xml version="1.0" encoding="utf-8"?>
<!--Defines layout for pager with tabs and paged layout-->

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayFlashcardsPagerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/flashcardInfoToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerFlashcards"
        android:layout_below="@+id/flashcardInfoToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:context=".DisplayFlashcardsPagerActivity"/>

</RelativeLayout>

